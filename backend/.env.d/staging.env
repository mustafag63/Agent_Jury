# ── Staging Environment ──────────────────────────
NODE_ENV=staging
PORT=4000
LOG_LEVEL=info

# Auth required but shared test key
AUTH_ENABLED=true
# API_KEYS=<set via secrets manager>

# Moderate rate limits
RATE_LIMIT_MAX_GLOBAL=200
RATE_LIMIT_MAX_EVALUATE=10

# Data: store with retention
DATA_STORE_CASE_TEXT=true
DATA_RETENTION_DAYS=30
DATA_AUTO_REDACT_PII=true

# Scoring: match production
SCORE_WEIGHT_FEASIBILITY=0.45
SCORE_WEIGHT_INNOVATION=0.35
SCORE_WEIGHT_RISK=0.20
SCORE_THRESHOLD_SHIP=75
SCORE_THRESHOLD_ITERATE=50

# AI: test dual-pass
AI_DUAL_PASS=true
AI_TEMPERATURE=0.2

# CORS: staging frontend domain
# CORS_ORIGINS=https://staging.example.com
