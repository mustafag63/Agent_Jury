# ── Development Environment ──────────────────────
NODE_ENV=development
PORT=4000
LOG_LEVEL=debug

# Relaxed security for local dev
AUTH_ENABLED=false
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Relaxed rate limits
RATE_LIMIT_MAX_GLOBAL=1000
RATE_LIMIT_MAX_EVALUATE=50

# Store everything for debugging
DATA_STORE_CASE_TEXT=true
DATA_RETENTION_DAYS=0
DATA_AUTO_REDACT_PII=false

# AI: dual-pass off for speed
AI_DUAL_PASS=false
AI_TEMPERATURE=0.2
