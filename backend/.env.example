PORT=4000
NODE_ENV=development

# ── Logging ──────────────────────────────────────
# LOG_LEVEL=debug     # trace | debug | info | warn | error | fatal

# ── LLM (primary) ───────────────────────────────
LLM_API_KEY=your_api_key
LLM_PROVIDER=openrouter
LLM_MODEL=google/gemini-2.0-flash-001
LLM_MODEL_FALLBACK=google/gemini-2.0-flash-lite-001

# ── LLM (cross-provider fallback, optional) ─────
# LLM_FALLBACK_PROVIDER=gemini
# LLM_FALLBACK_API_KEY=your_gemini_direct_api_key
# LLM_FALLBACK_MODEL=gemini-2.0-flash

# ── AI Behavior ─────────────────────────────────
AI_TEMPERATURE=0.2
# AI_SEED=42
AI_DUAL_PASS=false

# ── Scoring Weights (must sum to 1.0) ───────────
SCORE_WEIGHT_FEASIBILITY=0.45
SCORE_WEIGHT_INNOVATION=0.35
SCORE_WEIGHT_RISK=0.20

# ── Scoring Thresholds ──────────────────────────
SCORE_THRESHOLD_SHIP=75
SCORE_THRESHOLD_ITERATE=50

# ── Scoring Risk Behavior ───────────────────────
# true = risk is inverted (high risk → lower final score)
SCORE_RISK_INVERSION=true

# ── Scoring Consensus Tuning ────────────────────
SCORE_DISAGREEMENT_DELTA=30
SCORE_WEAK_SPREAD=40
SCORE_WEAK_STDDEV=25
SCORE_MODERATE_SPREAD=25
SCORE_MODERATE_STDDEV=15
SCORE_LOW_CONFIDENCE_THRESHOLD=30

# ── Data Management ──────────────────────────────
# DATA_DB_PATH=./data/agent_jury.db
DATA_STORE_CASE_TEXT=true
DATA_RETENTION_DAYS=90
DATA_AUTO_REDACT_PII=false
DATA_PURGE_INTERVAL_MS=3600000

# ── Attestation ─────────────────────────────────
ATTESTATION_PRIVATE_KEY=0x_your_backend_attestation_private_key

# ── Authentication ──────────────────────────────
AUTH_ENABLED=true
API_KEYS=your-secret-api-key-min-32-chars-long

# ── Rate Limiting ───────────────────────────────
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_GLOBAL=100
RATE_LIMIT_MAX_EVALUATE=5

# ── CORS (comma-separated origins) ──────────────
CORS_ORIGINS=http://localhost:3000
